{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny":false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true

  },
  "include": [
    "src/**/*.ts",
    "index.ts",
    "migrations/*.js",
    "config/*.js"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
    ]
}