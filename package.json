{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/app/server.ts",
  "scripts": {
    "local": "NODE_ENV=local ts-node ./index.ts",
    "rundev": "NODE_ENV=local ts-node ./index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "lint": "eslint --fix . --ext .ts",
    "lint:fix": "eslint -c .eslintrc.js \"{server, test}/**/*.{ts}\" --quiet --fix",
    "prettier": "prettier --config .prettierrc.js 'src/**/*.ts' --write",
    "prepare": "husky install",
    "development": "npx sequelize db:create && npx sequelize db:migrate && NODE_ENV=development ts-node ./index.ts",
    "upgradeAntierPackage": "npm upgrade @antiers/product-package",
    "debug": "NODE_ENV=local ts-node ./index.ts",
    "runBuild": "npx sequelize db:create && npx sequelize db:migrate && node ./",
    "build": "rm -rf ./dist && tsc && cp -R src/views/ dist/src/views/ &&cp -R grpc/proto/ dist/grpc/proto/ && cp -R .sequelizerc dist/.sequelizerc",
    "imageBuild": "npm run build &&  docker build -t mail_service:latest .",
    "imageStart": "docker run mail_service",
    "createTag": "docker tag mail_service antiers/exch_mail_service:latest",
    "pushImage": "docker push antiers/exch_mail_service:latest",
    "pushLatestImage": "npm run imageBuild && npm run createTag && npm run pushImage",
    "git": "git add . && git commit -m",
    "postgit": "git push --all"
  },
  "author": "Antier",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express-fileupload": "^1.1.7",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-autofix": "^1.0.5",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.1",
    "joi-to-typescript": "^2.2.1",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@antiers/product-package": "^1.3.2",
    "@grpc/proto-loader": "^0.6.5",
    "@types/validator": "^13.6.3",
    "aws-sdk": "^2.989.0",
    "body-parser": "^1.19.0",
    "chai": "^4.3.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-status-monitor": "^1.3.4",
    "express-validation": "^3.0.8",
    "grpc": "^1.24.11",
    "helmet": "^5.0.2",
    "http-auth": "^4.1.9",
    "joi": "^17.4.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.5",
    "path": "^0.12.7",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "hooks": {
    "pre-commit": "yarn lint"
  }
}
